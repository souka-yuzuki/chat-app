<div class = "main-header" >
  <P class = "chat-title">magicroom</P>
  <div class = "chat-end-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class = "main-body" >
  <div class = "message-box">
    <div class = "user-date">
      <div class = "user">
        <p>ユーザー名</P>
      </div>
      <div class = "date">
        <p>日にち時刻</P>
      </div>
    </div>
    <div class = "message">
      <P>メッセージ</P>
    </div>
  </div>
<div class =  >
<%= form_with model: [@room, @message], class: 'main-footer', local: true do |f| %>
  <div class = "form-box">
    <%= f.text_field :content, class: 'text' placeholder="type a message" %>
    <label class="image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit-btn' %> 
<% end %>