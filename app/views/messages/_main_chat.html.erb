<div class = "main-header" >
  <P class = "chat-title">magicroom</P>
  <div class = "chat-end-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class = "main-body" >
  <%= render partial: 'message', collection: @messages %>
</div>
<%= form_with model: [@room, @message], class: 'main-footer', local: true do |f| %>
  <div class = "form-box">
    <%= f.text_field :content, class: 'text' placeholder="type a message" %>
    <label class="image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit-btn' %> 
<% end %>